{
  "manifest_version": 2,

  "name": "zxcvbn4Chrome - Password Strength Estimator",
  "description": "Estimate strength of your password",
  "version": "1.1",

  "icons": {
    "16": "res/16.png",
    "128": "res/128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "res/19.png",
      "38": "res/38.png"
    },
    "default_popup": "src/html/popup.html",
    "default_title": "zxcvbn4Chrome - Password Strength Estimator"
  },
  "options_page": "src/html/options.html",
  "permissions": [
    "storage"
  ]
}